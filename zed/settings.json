// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  //"theme": "Catppuccin Macchiato - No Italics",
  "theme": "Catppuccin Macchiato - No Italics",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 13,
  "buffer_font_size": 13,
  "ui_font_family": "Fira Code Medium",
  "buffer_font_family": "Fira Code Retina",
  // "buffer_font_family": "Fira Code Medium",
  "buffer_font_features": {
    "calt": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "experimental.theme_overrides": {
    "editor.invisible": "#777"
  },
  "languages": {
    "Ruby": {
      "language_servers": ["solargraph", "rubocop", "!ruby-lsp", "..."]
    },
    "Kotlin": { "language_servers": ["kotlin-language-server", "..."] },
    "Python": {
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"]
        }
      },
      "format_on_save": "on"
    }
  },
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
    // "ruby-lsp": {
    //   "initialization_options": {
    //     "enabledFeatures": {
    //       "diagnostics": false
    //     }
    //   }
    // }
  },
  "show_whitespaces": "all"
}
